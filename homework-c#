
//Трехзначное число, показывается второе

Random random = new Random();

int Number = random.Next(100, 999);

Console.WriteLine(Number);

Number = Convert.ToInt32(Number / 10);

string str = Convert.ToString(Number);

Console.WriteLine(str.Remove(0,1));




//задача Выходной

void TestWeekend(int x)
{
    if (x == 7 || x == 6)
    {
        Console.WriteLine("Выходной день");

    }
    else if (x < 6 && x > 0)
    {
        Console.WriteLine("будний день");
    }
    else
    {
        Console.WriteLine("не существует");
    }
}

int x = Convert.ToInt32(Console.ReadLine());

TestWeekend(x);



int x = Convert.ToInt32(Console.ReadLine());

string Str = Convert.ToString(x);

string Str2 = Str.Remove(0, 2);

Console.WriteLine(Str2.Remove(1));

